<Window x:Class="OptiX.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OptiX"
        mc:Ignorable="d"
        Title="OptiX" Height="800" Width="1200"
        Background="#F8F9FA"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True">
    
    <Window.Resources>
        <!-- 모던 스타일 정의 -->
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E1E5E9"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="15"
                                Padding="20">
                            <ContentPresenter HorizontalAlignment="Right" 
                                            VerticalAlignment="Center"
                                            Margin="0,0,20,0"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#F1F3F4"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#4285F4"/>
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#4285F4" 
                                                        BlurRadius="10" 
                                                        ShadowDepth="0" 
                                                        Opacity="0.3"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#E8F0FE"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#1A73E8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        
        <!-- 커스텀 타이틀바 -->
        <Border Grid.Row="0" 
                Background="#87CEEB" 
                CornerRadius="0,0,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- 타이틀 텍스트 -->
                <TextBlock Grid.Column="0" 
                          Text="OptiX" 
                          FontSize="16" 
                          FontWeight="Bold" 
                          Foreground="White" 
                          VerticalAlignment="Center" 
                          Margin="15,0,0,0"/>
                
                <!-- 창 제어 버튼들 -->
                <StackPanel Grid.Column="1" 
                           Orientation="Horizontal" 
                           HorizontalAlignment="Right">
                    <Button x:Name="MinimizeButton" 
                           Content="─" 
                           Width="40" 
                           Height="30" 
                           Background="Transparent" 
                           BorderThickness="0" 
                           Foreground="White" 
                           FontSize="14" 
                           FontWeight="Bold"
                           Click="MinimizeButton_Click"/>
                    <Button x:Name="CloseButton" 
                           Content="✕" 
                           Width="40" 
                           Height="30" 
                           Background="Transparent" 
                           BorderThickness="0" 
                           Foreground="White" 
                           FontSize="14" 
                           FontWeight="Bold"
                           Click="CloseButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- 메인 콘텐츠 -->
        <Grid Grid.Row="1" Grid.RowSpan="2" Margin="40,20,40,40">
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
        
        <!-- 상단 2개 박스 -->
        <Grid Grid.Row="0" Margin="0,0,0,30">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            
            <!-- 특성 버튼 -->
            <Button x:Name="CharacteristicsButton" 
                    Grid.Column="0" 
                    Margin="0,0,15,0"
                    Style="{StaticResource ModernButtonStyle}"
                    FontSize="64"
                    Click="CharacteristicsButton_Click"
                    MouseEnter="CharacteristicsButton_MouseEnter"
                    MouseLeave="CharacteristicsButton_MouseLeave">
                특성
            </Button>
            
            <!-- IPVS 버튼 -->
            <Button x:Name="IPVSButton" 
                    Grid.Column="1" 
                    Margin="15,0,0,0"
                    Style="{StaticResource ModernButtonStyle}"
                    FontSize="64"
                    Click="IPVSButton_Click"
                    MouseEnter="IPVSButton_MouseEnter"
                    MouseLeave="IPVSButton_MouseLeave">
                IPVS
            </Button>
        </Grid>
        
        <!-- 툴팁 레이어 (별도 레이어) -->
        <Grid Grid.Row="0" Margin="0,0,0,30" IsHitTestVisible="False">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            
            <!-- 특성 호버 툴팁 -->
            <Border x:Name="CharacteristicsTooltip" 
                    Grid.Column="0"
                    Background="White"
                    BorderBrush="#4285F4"
                    BorderThickness="2"
                    CornerRadius="10"
                    Padding="20"
                    Margin="0,0,15,0"
                    Visibility="Collapsed"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" 
                              Text="특성" 
                              FontSize="28" 
                              FontWeight="Bold" 
                              Foreground="#2C3E50" 
                              HorizontalAlignment="Center"
                              Margin="0,0,0,15"/>
                    <TextBlock Grid.Row="1" 
                              Text="1. 패널의 중심점(Center Point) 계측&#x0a;2. 패널 점등 및 특성 데이터(휘도, 색좌표, VACS, 전류 등) 취득&#x0a;3. 특성 데이터 판정&#x0a;4. Cell MTP 및 AI진행" 
                              FontSize="14" 
                              Foreground="#666666" 
                              TextWrapping="Wrap"
                              HorizontalAlignment="Left"
                              TextAlignment="Left"
                              LineHeight="20"/>
                </Grid>
            </Border>
            
            <!-- IPVS 호버 툴팁 -->
            <Border x:Name="IPVSTooltip" 
                    Grid.Column="1"
                    Background="White"
                    BorderBrush="#4285F4"
                    BorderThickness="2"
                    CornerRadius="10"
                    Padding="20"
                    Margin="15,0,0,0"
                    Visibility="Collapsed"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" 
                              Text="IPVS" 
                              FontSize="28" 
                              FontWeight="Bold" 
                              Foreground="#2C3E50" 
                              HorizontalAlignment="Center"
                              Margin="0,0,0,15"/>
                    <TextBlock Grid.Row="1" 
                              Text="1. Cell MTP 전압 인가&#x0a;2. User 설정 포인트 계측 이후 특성 데이터(휘도, 색좌표, VACS, 전류 등) 취득&#x0a;3. IPVS, WON 로직 진입&#x0a;4. 판정 수행" 
                              FontSize="14" 
                              Foreground="#666666" 
                              TextWrapping="Wrap"
                              HorizontalAlignment="Left"
                              TextAlignment="Left"
                              LineHeight="20"/>
                </Grid>
            </Border>
        </Grid>
        
        <!-- 하단 3개 박스 -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Manual 버튼 -->
            <Button Grid.Column="0" 
                    Margin="0,0,15,0"
                    Style="{StaticResource ModernButtonStyle}"
                    FontSize="24"
                    Click="ManualButton_Click">
                Manual
            </Button>
            
            <!-- LUT 버튼 -->
            <Button Grid.Column="1" 
                    Margin="7,0,7,0"
                    Style="{StaticResource ModernButtonStyle}"
                    FontSize="24"
                    Click="LUTButton_Click">
                LUT
            </Button>
            
            <!-- 설정 버튼 -->
            <Button Grid.Column="2" 
                    Margin="15,0,0,0"
                    Style="{StaticResource ModernButtonStyle}"
                    FontSize="24"
                    Click="SettingsButton_Click">
                설정
            </Button>
        </Grid>
        </Grid>
    </Grid>
</Window>
