<UserControl x:Class="OptiX.OpticPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="1200">
    
    <UserControl.Resources>
        <!-- 모던 스타일 정의 -->
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E1E5E9"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="15"
                                Padding="20">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#F1F3F4"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#4285F4"/>
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#4285F4" 
                                                        BlurRadius="10" 
                                                        ShadowDepth="0" 
                                                        Opacity="0.3"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#E8F0FE"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#1A73E8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- 메인 콘텐츠 영역 (플랫폼에 꽉 차게) -->
        <Grid Grid.Row="1" Margin="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- 뒤로가기, Cell/Total 토글 버튼 (콘텐츠 영역 왼쪽 상단) -->
            <StackPanel Grid.Row="0" 
                       Orientation="Horizontal" 
                       HorizontalAlignment="Left" 
                       Margin="20,20,0,0">
                <!-- 뒤로가기 버튼 -->
                <Button x:Name="BackButton" 
                        Content="← 뒤로" 
                        Width="80" 
                        Height="40" 
                        Margin="0,0,10,0"
                        Background="Transparent" 
                        BorderThickness="1" 
                        BorderBrush="#4285F4"
                        Foreground="#4285F4" 
                        FontSize="14" 
                        FontWeight="Bold"
                        Click="BackButton_Click"/>
                <Button x:Name="CellButton" 
                        Content="Cell" 
                        Width="80" 
                        Height="40" 
                        Margin="0,0,10,0"
                        Background="White" 
                        Foreground="#4285F4" 
                        FontSize="14" 
                        FontWeight="Bold"
                        Click="CellButton_Click"/>
                <Button x:Name="TotalButton" 
                        Content="Total" 
                        Width="80" 
                        Height="40"
                        Background="Transparent" 
                        BorderThickness="1"
                        BorderBrush="#E1E5E9"
                        Foreground="#666666" 
                        FontSize="14" 
                        FontWeight="Bold"
                        Click="TotalButton_Click"/>
            </StackPanel>
            
            <!-- Cell 뷰 -->
            <Grid x:Name="CellView" Grid.Row="1" Visibility="Visible" Margin="20,20,20,20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Cell 뷰 헤더 -->
                <TextBlock Grid.Row="0" 
                          Text="Cell별 Optic 데이터" 
                          FontSize="24" 
                          FontWeight="Bold" 
                          Foreground="#2C3E50" 
                          Margin="0,0,0,20"/>
                
                <!-- Cell 데이터 테이블 -->
                <Border Grid.Row="1" 
                        Background="White" 
                        BorderBrush="#E1E5E9" 
                        BorderThickness="1" 
                        CornerRadius="10">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <!-- 테이블 헤더 -->
                        <Border Grid.Row="0" 
                                Background="#F8F9FA" 
                                CornerRadius="10,10,0,0">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBlock Grid.Column="0" Text="Cell ID" FontWeight="Bold" Padding="15,10" HorizontalAlignment="Center"/>
                                <TextBlock Grid.Column="1" Text="휘도" FontWeight="Bold" Padding="15,10" HorizontalAlignment="Center"/>
                                <TextBlock Grid.Column="2" Text="색좌표 X" FontWeight="Bold" Padding="15,10" HorizontalAlignment="Center"/>
                                <TextBlock Grid.Column="3" Text="색좌표 Y" FontWeight="Bold" Padding="15,10" HorizontalAlignment="Center"/>
                                <TextBlock Grid.Column="4" Text="VACS" FontWeight="Bold" Padding="15,10" HorizontalAlignment="Center"/>
                            </Grid>
                        </Border>
                        
                        <!-- 테이블 데이터 -->
                        <ScrollViewer Grid.Row="1">
                            <StackPanel>
                                <Border BorderBrush="#E1E5E9" BorderThickness="0,1,0,0">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <TextBlock Grid.Column="0" Text="Cell-001" Padding="15,10" HorizontalAlignment="Center"/>
                                        <TextBlock Grid.Column="1" Text="450.2" Padding="15,10" HorizontalAlignment="Center"/>
                                        <TextBlock Grid.Column="2" Text="0.312" Padding="15,10" HorizontalAlignment="Center"/>
                                        <TextBlock Grid.Column="3" Text="0.328" Padding="15,10" HorizontalAlignment="Center"/>
                                        <TextBlock Grid.Column="4" Text="95.2" Padding="15,10" HorizontalAlignment="Center"/>
                                    </Grid>
                                </Border>
                                
                                <Border BorderBrush="#E1E5E9" BorderThickness="0,1,0,0">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <TextBlock Grid.Column="0" Text="Cell-002" Padding="15,10" HorizontalAlignment="Center"/>
                                        <TextBlock Grid.Column="1" Text="448.7" Padding="15,10" HorizontalAlignment="Center"/>
                                        <TextBlock Grid.Column="2" Text="0.315" Padding="15,10" HorizontalAlignment="Center"/>
                                        <TextBlock Grid.Column="3" Text="0.325" Padding="15,10" HorizontalAlignment="Center"/>
                                        <TextBlock Grid.Column="4" Text="94.8" Padding="15,10" HorizontalAlignment="Center"/>
                                    </Grid>
                                </Border>
                                
                                <Border BorderBrush="#E1E5E9" BorderThickness="0,1,0,0">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <TextBlock Grid.Column="0" Text="Cell-003" Padding="15,10" HorizontalAlignment="Center"/>
                                        <TextBlock Grid.Column="1" Text="452.1" Padding="15,10" HorizontalAlignment="Center"/>
                                        <TextBlock Grid.Column="2" Text="0.310" Padding="15,10" HorizontalAlignment="Center"/>
                                        <TextBlock Grid.Column="3" Text="0.330" Padding="15,10" HorizontalAlignment="Center"/>
                                        <TextBlock Grid.Column="4" Text="95.5" Padding="15,10" HorizontalAlignment="Center"/>
                                    </Grid>
                                </Border>
                            </StackPanel>
                        </ScrollViewer>
                    </Grid>
                </Border>
            </Grid>
            
            <!-- Total 뷰 -->
            <Grid x:Name="TotalView" Grid.Row="1" Visibility="Collapsed" Margin="20,20,20,20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Total 뷰 헤더 -->
                <TextBlock Grid.Row="0" 
                          Text="전체 Optic 데이터 요약" 
                          FontSize="24" 
                          FontWeight="Bold" 
                          Foreground="#2C3E50" 
                          Margin="0,0,0,20"/>
                
                <!-- Total 데이터 카드들 -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- 평균 휘도 카드 -->
                    <Border Grid.Column="0" 
                            Background="White" 
                            BorderBrush="#E1E5E9" 
                            BorderThickness="1" 
                            CornerRadius="10" 
                            Margin="0,0,10,0">
                        <StackPanel Margin="20">
                            <TextBlock Text="평균 휘도" FontSize="16" FontWeight="Bold" Foreground="#666666" Margin="0,0,0,10"/>
                            <TextBlock Text="450.3" FontSize="32" FontWeight="Bold" Foreground="#4285F4" HorizontalAlignment="Center"/>
                            <TextBlock Text="cd/m²" FontSize="14" Foreground="#666666" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- 평균 색좌표 X 카드 -->
                    <Border Grid.Column="1" 
                            Background="White" 
                            BorderBrush="#E1E5E9" 
                            BorderThickness="1" 
                            CornerRadius="10" 
                            Margin="5,0">
                        <StackPanel Margin="20">
                            <TextBlock Text="평균 색좌표 X" FontSize="16" FontWeight="Bold" Foreground="#666666" Margin="0,0,0,10"/>
                            <TextBlock Text="0.312" FontSize="32" FontWeight="Bold" Foreground="#4285F4" HorizontalAlignment="Center"/>
                            <TextBlock Text="CIE 1931" FontSize="14" Foreground="#666666" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- 평균 색좌표 Y 카드 -->
                    <Border Grid.Column="2" 
                            Background="White" 
                            BorderBrush="#E1E5E9" 
                            BorderThickness="1" 
                            CornerRadius="10" 
                            Margin="5,0">
                        <StackPanel Margin="20">
                            <TextBlock Text="평균 색좌표 Y" FontSize="16" FontWeight="Bold" Foreground="#666666" Margin="0,0,0,10"/>
                            <TextBlock Text="0.328" FontSize="32" FontWeight="Bold" Foreground="#4285F4" HorizontalAlignment="Center"/>
                            <TextBlock Text="CIE 1931" FontSize="14" Foreground="#666666" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- 평균 VACS 카드 -->
                    <Border Grid.Column="3" 
                            Background="White" 
                            BorderBrush="#E1E5E9" 
                            BorderThickness="1" 
                            CornerRadius="10" 
                            Margin="10,0,0,0">
                        <StackPanel Margin="20">
                            <TextBlock Text="평균 VACS" FontSize="16" FontWeight="Bold" Foreground="#666666" Margin="0,0,0,10"/>
                            <TextBlock Text="95.2" FontSize="32" FontWeight="Bold" Foreground="#4285F4" HorizontalAlignment="Center"/>
                            <TextBlock Text="%" FontSize="14" Foreground="#666666" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
