<Window x:Class="OptiX.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OptiX"
        mc:Ignorable="d"
        Title="OptiX" Height="800" Width="1200"
        Background="#F8F9FA"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="CanResizeWithGrip"
        MinWidth="800"
        MinHeight="600">
    
    <Window.Resources>
        <!-- 모던 스타일 정의 -->
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E1E5E9"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="15"
                                Padding="20">
                            <ContentPresenter HorizontalAlignment="Right" 
                                            VerticalAlignment="Center"
                                            Margin="0,0,20,0"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#F1F3F4"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#8B5CF6"/>
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#8B5CF6" 
                                                        BlurRadius="10" 
                                                        ShadowDepth="0" 
                                                        Opacity="0.3"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#F3F0FF"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#8B5CF6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        
        <!-- 크기 조정 핸들들 - 커서는 클릭 시에만 변경 -->
        <!-- 상단 크기 조정 핸들 -->
        <Border x:Name="TopResizeHandle" 
                Grid.Row="0" 
                Height="15" 
                Background="Transparent" 
                MouseLeftButtonDown="ResizeHandle_MouseLeftButtonDown"
                MouseMove="ResizeHandle_MouseMove"
                MouseLeftButtonUp="ResizeHandle_MouseLeftButtonUp"/>
        
        <!-- 하단 크기 조정 핸들 -->
        <Border x:Name="BottomResizeHandle" 
                Grid.Row="2" 
                Height="15" 
                Background="Transparent" 
                MouseLeftButtonDown="ResizeHandle_MouseLeftButtonDown"
                MouseMove="ResizeHandle_MouseMove"
                MouseLeftButtonUp="ResizeHandle_MouseLeftButtonUp"/>
        
        <!-- 좌측 크기 조정 핸들 -->
        <Border x:Name="LeftResizeHandle" 
                Grid.Row="0" Grid.RowSpan="3"
                Width="15" 
                Background="Transparent" 
                MouseLeftButtonDown="ResizeHandle_MouseLeftButtonDown"
                MouseMove="ResizeHandle_MouseMove"
                MouseLeftButtonUp="ResizeHandle_MouseLeftButtonUp"/>
        
        <!-- 우측 크기 조정 핸들 -->
        <Border x:Name="RightResizeHandle" 
                Grid.Row="0" Grid.RowSpan="3"
                Width="15" 
                Background="Transparent" 
                MouseLeftButtonDown="ResizeHandle_MouseLeftButtonDown"
                MouseMove="ResizeHandle_MouseMove"
                MouseLeftButtonUp="ResizeHandle_MouseLeftButtonUp"
                HorizontalAlignment="Right"/>
        
        <!-- 모서리 크기 조정 핸들들 -->
        <!-- 좌상단 모서리 -->
        <Border x:Name="TopLeftResizeHandle" 
                Grid.Row="0"
                Width="20" Height="20" 
                Background="Transparent" 
                MouseLeftButtonDown="ResizeHandle_MouseLeftButtonDown"
                MouseMove="ResizeHandle_MouseMove"
                MouseLeftButtonUp="ResizeHandle_MouseLeftButtonUp"/>
        
        <!-- 우상단 모서리 -->
        <Border x:Name="TopRightResizeHandle" 
                Grid.Row="0"
                Width="20" Height="20" 
                Background="Transparent" 
                MouseLeftButtonDown="ResizeHandle_MouseLeftButtonDown"
                MouseMove="ResizeHandle_MouseMove"
                MouseLeftButtonUp="ResizeHandle_MouseLeftButtonUp"
                HorizontalAlignment="Right"/>
        
        <!-- 좌하단 모서리 -->
        <Border x:Name="BottomLeftResizeHandle" 
                Grid.Row="2"
                Width="20" Height="20" 
                Background="Transparent" 
                MouseLeftButtonDown="ResizeHandle_MouseLeftButtonDown"
                MouseMove="ResizeHandle_MouseMove"
                MouseLeftButtonUp="ResizeHandle_MouseLeftButtonUp"/>
        
        <!-- 우하단 모서리 -->
        <Border x:Name="BottomRightResizeHandle" 
                Grid.Row="2"
                Width="20" Height="20" 
                Background="Transparent" 
                MouseLeftButtonDown="ResizeHandle_MouseLeftButtonDown"
                MouseMove="ResizeHandle_MouseMove"
                MouseLeftButtonUp="ResizeHandle_MouseLeftButtonUp"
                HorizontalAlignment="Right"/>
        
        <!-- 커스텀 타이틀바 -->
        <Border x:Name="TitleBar" 
                Grid.Row="0" 
                Background="#8B5CF6" 
                CornerRadius="0,0,0,0"
                MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                        <!-- 타이틀 텍스트 -->
                        <TextBlock x:Name="TitleText" 
                                  Grid.Column="0" 
                                  Text="OptiX" 
                                  FontSize="16" 
                                  FontWeight="Bold" 
                                  Foreground="White" 
                                  VerticalAlignment="Center" 
                                  Margin="15,0,0,0"/>
                
                <!-- 창 제어 버튼들 -->
                <StackPanel Grid.Column="1" 
                           Orientation="Horizontal" 
                           HorizontalAlignment="Right">
                    <!-- 모드 토글 컨테이너 -->
                    <Border x:Name="ModeToggleContainer" 
                           Width="60" 
                           Height="24" 
                           Background="#8B5CF6" 
                           CornerRadius="12" 
                           Margin="0,0,5,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- 라이트모드 버튼 -->
                            <Button x:Name="LightModeButton" 
                                   Grid.Column="0"
                                   Background="Transparent" 
                                   BorderThickness="0" 
                                   Click="LightModeButton_Click"
                                   Margin="3">
                                <Ellipse Width="16" Height="16" 
                                        Fill="White"/>
                            </Button>
                            
                            <!-- 다크모드 버튼 -->
                            <Button x:Name="DarkModeButton" 
                                   Grid.Column="1"
                                   Background="Transparent" 
                                   BorderThickness="0" 
                                   Click="DarkModeButton_Click"
                                   Margin="3">
                                <Ellipse Width="16" Height="16" 
                                        Fill="Black"/>
                            </Button>
                        </Grid>
                    </Border>
                    <Button x:Name="MinimizeButton" 
                           Content="─" 
                           Width="40" 
                           Height="30" 
                           Background="Transparent" 
                           BorderThickness="0" 
                           Foreground="White" 
                           FontSize="14" 
                           FontWeight="Bold"
                           Click="MinimizeButton_Click"/>
                    <Button x:Name="MaximizeButton" 
                           Content="□" 
                           Width="40" 
                           Height="30" 
                           Background="Transparent" 
                           BorderThickness="0" 
                           Foreground="White" 
                           FontSize="14" 
                           FontWeight="Bold"
                           Click="MaximizeButton_Click"/>
                    <Button x:Name="CloseButton" 
                           Content="✕" 
                           Width="40" 
                           Height="30" 
                           Background="Transparent" 
                           BorderThickness="0" 
                           Foreground="White" 
                           FontSize="14" 
                           FontWeight="Bold"
                           Click="CloseButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- 메인 콘텐츠 -->
        <Grid x:Name="MainContent" Grid.Row="1" Grid.RowSpan="2" Margin="40,20,40,40">
            <!-- 메인 페이지 콘텐츠 -->
            <Grid x:Name="MainPageContent">
                <Grid.RowDefinitions>
                    <RowDefinition Height="2*"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>
            
            <!-- 상단 2개 박스 -->
            <Grid Grid.Row="0" Margin="0,0,0,30">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Optic 버튼 -->
            <Button x:Name="CharacteristicsButton" 
                    Grid.Column="0" 
                    Margin="0,0,15,0"
                    Style="{StaticResource ModernButtonStyle}"
                    FontSize="64"
                    Click="CharacteristicsButton_Click"
                    MouseEnter="CharacteristicsButton_MouseEnter"
                    MouseLeave="CharacteristicsButton_MouseLeave">
                Optic
            </Button>
            
            <!-- IPVS 버튼 -->
            <Button x:Name="IPVSButton" 
                    Grid.Column="1" 
                    Margin="15,0,0,0"
                    Style="{StaticResource ModernButtonStyle}"
                    FontSize="64"
                    Click="IPVSButton_Click"
                    MouseEnter="IPVSButton_MouseEnter"
                    MouseLeave="IPVSButton_MouseLeave">
                IPVS
            </Button>
        </Grid>
        
        <!-- 툴팁 레이어 (별도 레이어) -->
        <Grid Grid.Row="0" Margin="0,0,0,30" IsHitTestVisible="False">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Optic 호버 툴팁 -->
            <Border x:Name="CharacteristicsTooltip" 
                    Grid.Column="0"
                    Background="White"
                    BorderBrush="#8B5CF6"
                    BorderThickness="2"
                    CornerRadius="10"
                    Padding="20"
                    Margin="0,0,15,0"
                    Visibility="Collapsed"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock x:Name="CharacteristicsTooltipTitle"
                              Grid.Row="0" 
                              Text="Optic" 
                              FontSize="28" 
                              FontWeight="Bold" 
                              Foreground="#2C3E50" 
                              HorizontalAlignment="Center"
                              Margin="0,0,0,15"/>
                    <TextBlock x:Name="CharacteristicsTooltipDescription"
                              Grid.Row="1" 
                              Text="1. 패널의 중심점(Center Point) 계측&#x0a;2. 패널 점등 및 특성 데이터(휘도, 색좌표, VACS, 전류 등) 취득&#x0a;3. 특성 데이터 판정&#x0a;4. Cell MTP 및 AI진행" 
                              FontSize="14" 
                              Foreground="#666666" 
                              TextWrapping="Wrap"
                              HorizontalAlignment="Left"
                              TextAlignment="Left"
                              LineHeight="20"
                              Margin="0,0,0,20"/>
                    <!-- Optic 계측 그림 -->
                    <Canvas Grid.Row="2" 
                            HorizontalAlignment="Center" 
                            VerticalAlignment="Center"
                            Width="300" 
                            Height="180">
                        <!-- 휴대폰 패널 -->
                        <Rectangle Canvas.Left="30" Canvas.Top="30" 
                                  Width="240" Height="120" 
                                  Fill="#F0F0F0" 
                                  Stroke="#CCCCCC" 
                                  StrokeThickness="3" 
                                  RadiusX="12" RadiusY="12"/>
                        <!-- 중심점 원 -->
                        <Ellipse Canvas.Left="135" Canvas.Top="75" 
                                Width="30" Height="30" 
                                Fill="#8B5CF6" 
                                Stroke="#8B5CF6" 
                                StrokeThickness="3"/>
                        <!-- 계측기 -->
                        <Path Canvas.Left="165" Canvas.Top="60" 
                              Data="M 0,0 L 30,15 L 0,30 Z" 
                              Fill="#FF6B6B" 
                              Stroke="#E53E3E" 
                              StrokeThickness="2"/>
                        <!-- 계측선 -->
                        <Line Canvas.Left="150" Canvas.Top="90" 
                              X2="180" Y2="90" 
                              Stroke="#FF6B6B" 
                              StrokeThickness="3"/>
                        <!-- 텍스트 -->
                        <TextBlock x:Name="CharacteristicsTooltipCenterPoint"
                                  Canvas.Left="15" Canvas.Top="160" 
                                  Text="Center Point 계측" 
                                  FontSize="12" 
                                  Foreground="#666666" 
                                  HorizontalAlignment="Center"/>
                    </Canvas>
                </Grid>
            </Border>
            
            <!-- IPVS 호버 툴팁 -->
            <Border x:Name="IPVSTooltip" 
                    Grid.Column="1"
                    Background="White"
                    BorderBrush="#8B5CF6"
                    BorderThickness="2"
                    CornerRadius="10"
                    Padding="20"
                    Margin="15,0,0,0"
                    Visibility="Collapsed"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock x:Name="IPVSTooltipTitle"
                              Grid.Row="0" 
                              Text="IPVS" 
                              FontSize="28" 
                              FontWeight="Bold" 
                              Foreground="#2C3E50" 
                              HorizontalAlignment="Center"
                              Margin="0,0,0,15"/>
                    <TextBlock x:Name="IPVSTooltipDescription"
                              Grid.Row="1" 
                              Text="1. Cell MTP 전압 인가&#x0a;2. User 설정 포인트 계측 이후 특성 데이터(휘도, 색좌표, VACS, 전류 등) 취득&#x0a;3. IPVS, WON 로직 진입&#x0a;4. 판정 수행" 
                              FontSize="14" 
                              Foreground="#666666" 
                              TextWrapping="Wrap"
                              HorizontalAlignment="Left"
                              TextAlignment="Left"
                              LineHeight="20"
                              Margin="0,0,0,20"/>
                    <!-- IPVS 계측 그림 -->
                    <Canvas Grid.Row="2" 
                            HorizontalAlignment="Center" 
                            VerticalAlignment="Center"
                            Width="300" 
                            Height="180">
                        <!-- 휴대폰 패널 -->
                        <Rectangle Canvas.Left="30" Canvas.Top="30" 
                                  Width="240" Height="120" 
                                  Fill="#F0F0F0" 
                                  Stroke="#CCCCCC" 
                                  StrokeThickness="3" 
                                  RadiusX="12" RadiusY="12"/>
                        <!-- 가로로 5개 원 (패널 중앙 배치) -->
                        <Ellipse Canvas.Left="60" Canvas.Top="75" 
                                Width="22" Height="22" 
                                Fill="#E0E0E0" 
                                Stroke="#CCCCCC" 
                                StrokeThickness="2"/>
                        <Ellipse Canvas.Left="97" Canvas.Top="75" 
                                Width="22" Height="22" 
                                Fill="#E0E0E0" 
                                Stroke="#CCCCCC" 
                                StrokeThickness="2"/>
                        <Ellipse Canvas.Left="134" Canvas.Top="75" 
                                Width="22" Height="22" 
                                Fill="#8B5CF6" 
                                Stroke="#8B5CF6" 
                                StrokeThickness="3"/>
                        <Ellipse Canvas.Left="171" Canvas.Top="75" 
                                Width="22" Height="22" 
                                Fill="#E0E0E0" 
                                Stroke="#CCCCCC" 
                                StrokeThickness="2"/>
                        <Ellipse Canvas.Left="208" Canvas.Top="75" 
                                Width="22" Height="22" 
                                Fill="#E0E0E0" 
                                Stroke="#CCCCCC" 
                                StrokeThickness="2"/>
                        <!-- 계측기 -->
                        <Path Canvas.Left="165" Canvas.Top="45" 
                              Data="M 0,0 L 22,11 L 0,22 Z" 
                              Fill="#FF6B6B" 
                              Stroke="#E53E3E" 
                              StrokeThickness="2"/>
                        <!-- 계측선 -->
                        <Line Canvas.Left="145" Canvas.Top="86" 
                              X2="168" Y2="86" 
                              Stroke="#FF6B6B" 
                              StrokeThickness="3"/>
                        <!-- 텍스트 -->
                        <TextBlock Canvas.Left="15" Canvas.Top="160" 
                                  Text="ex) 5-Point 계측" 
                                  FontSize="12" 
                                  Foreground="#666666" 
                                  HorizontalAlignment="Center"/>
                    </Canvas>
                </Grid>
            </Border>
        </Grid>
        
        <!-- 하단 3개 박스 -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Manual 버튼 -->
            <Button x:Name="ManualButton" 
                    Grid.Column="0" 
                    Margin="0,0,15,0"
                    Style="{StaticResource ModernButtonStyle}"
                    FontSize="24"
                    Click="ManualButton_Click"
                    MouseEnter="ManualButton_MouseEnter"
                    MouseLeave="ManualButton_MouseLeave">
                Manual
            </Button>
            
            <!-- LUT 버튼 -->
            <Button x:Name="LUTButton" 
                    Grid.Column="1" 
                    Margin="7,0,7,0"
                    Style="{StaticResource ModernButtonStyle}"
                    FontSize="24"
                    Click="LUTButton_Click"
                    MouseEnter="LUTButton_MouseEnter"
                    MouseLeave="LUTButton_MouseLeave">
                LUT
            </Button>
            
            <!-- 설정 버튼 -->
            <Button x:Name="SettingsButton" 
                    Grid.Column="2" 
                    Margin="15,0,0,0"
                    Style="{StaticResource ModernButtonStyle}"
                    FontSize="24"
                    Click="SettingsButton_Click">
                설정
            </Button>
        </Grid>
        
        <!-- 하단 버튼 툴팁 레이어 -->
        <Grid Grid.Row="1" IsHitTestVisible="False">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Manual 호버 툴팁 -->
            <Border x:Name="ManualTooltip" 
                    Grid.Column="0"
                    Background="White"
                    BorderBrush="#8B5CF6"
                    BorderThickness="2"
                    CornerRadius="10"
                    Padding="20"
                    Margin="0,0,15,0"
                    Visibility="Collapsed"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" 
                              Text="Manual" 
                              FontSize="20" 
                              FontWeight="Bold" 
                              Foreground="#2C3E50" 
                              HorizontalAlignment="Center"
                              Margin="0,0,0,10"/>
                    <TextBlock Grid.Row="1" 
                              Text="수동 설정 및 제어 기능" 
                              FontSize="14" 
                              Foreground="#666666" 
                              TextWrapping="Wrap"
                              HorizontalAlignment="Center"
                              TextAlignment="Center"/>
                </Grid>
            </Border>
            
            <!-- LUT 호버 툴팁 -->
            <Border x:Name="LUTTooltip" 
                    Grid.Column="1"
                    Background="White"
                    BorderBrush="#8B5CF6"
                    BorderThickness="2"
                    CornerRadius="10"
                    Padding="20"
                    Margin="7,0,7,0"
                    Visibility="Collapsed"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch">
    <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" 
                              Text="LUT" 
                              FontSize="20" 
                              FontWeight="Bold" 
                              Foreground="#2C3E50" 
                              HorizontalAlignment="Center"
                              Margin="0,0,0,10"/>
                    <TextBlock Grid.Row="1" 
                              Text="Look-Up Table 관련 기능" 
                              FontSize="14" 
                              Foreground="#666666" 
                              TextWrapping="Wrap"
                              HorizontalAlignment="Center"
                              TextAlignment="Center"/>
                </Grid>
            </Border>
            
            <!-- 설정 호버 툴팁 -->
            <Border x:Name="SettingsTooltip" 
                    Grid.Column="2"
                    Background="White"
                    BorderBrush="#8B5CF6"
                    BorderThickness="2"
                    CornerRadius="10"
                    Padding="20"
                    Margin="15,0,0,0"
                    Visibility="Collapsed"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <TextBlock x:Name="SettingsTooltipTitle"
                              Grid.Row="0" 
                              Text="설정" 
                              FontSize="20" 
                              FontWeight="Bold" 
                              Foreground="#2C3E50" 
                              HorizontalAlignment="Center"
                              Margin="0,0,0,10"/>
                    <TextBlock x:Name="SettingsTooltipDescription"
                              Grid.Row="1" 
                              Text="애플리케이션 설정 및 환경 구성" 
                              FontSize="14" 
                              Foreground="#666666" 
                              TextWrapping="Wrap"
                              HorizontalAlignment="Center"
                              TextAlignment="Center"/>
                </Grid>
            </Border>
        </Grid>
            </Grid>
        </Grid>
    </Grid>
</Window>
