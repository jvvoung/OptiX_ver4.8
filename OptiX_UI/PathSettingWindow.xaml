                    </Grid>
                    
                    <!-- Load ì„¹ì…˜ -->
                    <TextBlock x:Name="FilePathSettingsTitle"
                               Text="ðŸ“„ íŒŒì¼ ê²½ë¡œ ì„¤ì •" 
                               FontSize="16" 
                               FontWeight="Bold" 
                               Foreground="{DynamicResource DynamicTextPrimaryColor}"
                               Margin="0,0,0,8"/>
                    
                    <Border Height="2" 
                            Background="{StaticResource PrimaryColor}" 
                            CornerRadius="1"
                            Margin="0,0,0,16"/>
                    
                    <!-- Sequence í–‰ -->
                    <Grid Margin="0,0,0,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="80"/>
