                               FontWeight="Bold" 
                               Foreground="{DynamicResource DynamicTextPrimaryColor}"
                               Margin="0,0,0,8"/>
                    
                    <Border Height="2" 
                            Background="{StaticResource PrimaryColor}" 
                            CornerRadius="1"
                            Margin="0,0,0,16"/>
                    
                    <!-- EECP í–‰ -->
                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="80"/>
