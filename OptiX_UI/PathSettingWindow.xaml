                    </Grid>
                    
                    <!-- CIM í–‰ -->
                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <Button Grid.Column="0" 
                                x:Name="CIMButton"
                                Content="ðŸ“‚ CIM" 
                                Style="{StaticResource SecondaryButtonStyle}"
                                FontSize="11"
                                Click="CIMButton_Click"/>
                        
                        <TextBox Grid.Column="1" 
                                 x:Name="CIMTextBox"
                                 Style="{StaticResource ModernTextBoxStyle}"
                                 Margin="8,0,0,0"
                                 Text="CIM í´ë”ë¥¼ ì„ íƒí•˜ì„¸ìš”"/>
                    </Grid>
                    
                    <!-- VALID í–‰ -->
                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <Button Grid.Column="0" 
                                x:Name="VALIDButton"
                                Content="ðŸ“‚ VALID" 
