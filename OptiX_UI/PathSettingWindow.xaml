                                FontSize="11"
                                Click="VALIDButton_Click"/>
                        
                        <TextBox Grid.Column="1" 
                                 x:Name="VALIDTextBox"
                                 Style="{StaticResource ModernTextBoxStyle}"
                                 Margin="8,0,0,0"
