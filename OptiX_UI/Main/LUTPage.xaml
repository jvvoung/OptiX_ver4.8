<UserControl x:Class="OptiX.Main.LUTPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1200">
    
    <UserControl.Resources>
        <!-- 라이트 모드 색상 팔레트 (OpticPage와 동일) -->
        <SolidColorBrush x:Key="PrimaryColor" Color="#8B5CF6"/>
        <SolidColorBrush x:Key="PrimaryDarkColor" Color="#7C3AED"/>
        <SolidColorBrush x:Key="PrimaryLightColor" Color="#A78BFA"/>
        <SolidColorBrush x:Key="SecondaryColor" Color="#10B981"/>
        <SolidColorBrush x:Key="SecondaryDarkColor" Color="#059669"/>
        <SolidColorBrush x:Key="AccentColor" Color="#F59E0B"/>
        <SolidColorBrush x:Key="BackgroundColor" Color="#F8FAFC"/>
        <SolidColorBrush x:Key="SurfaceColor" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="CardColor" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="BorderColor" Color="#E2E8F0"/>
        <SolidColorBrush x:Key="TextPrimaryColor" Color="#1E293B"/>
        <SolidColorBrush x:Key="TextSecondaryColor" Color="#64748B"/>
        <SolidColorBrush x:Key="TextMutedColor" Color="#94A3B8"/>

        <!-- 다크 모드 색상 팔레트 (OpticPage와 동일) -->
        <SolidColorBrush x:Key="DarkBackgroundColor" Color="#0F172A"/>
        <SolidColorBrush x:Key="DarkSurfaceColor" Color="#1E293B"/>
        <SolidColorBrush x:Key="DarkCardColor" Color="#334155"/>
        <SolidColorBrush x:Key="DarkBorderColor" Color="#475569"/>
        <SolidColorBrush x:Key="DarkTextPrimaryColor" Color="#F1F5F9"/>
        <SolidColorBrush x:Key="DarkTextSecondaryColor" Color="#CBD5E1"/>
        <SolidColorBrush x:Key="DarkTextMutedColor" Color="#94A3B8"/>

        <!-- 동적 색상 팔레트 (OpticPage와 동일) -->
        <SolidColorBrush x:Key="DynamicBackgroundColor" Color="#F8FAFC"/>
        <SolidColorBrush x:Key="DynamicSurfaceColor" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="DynamicCardColor" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="DynamicBorderColor" Color="#E2E8F0"/>
        <SolidColorBrush x:Key="DynamicTextPrimaryColor" Color="#1E293B"/>
        <SolidColorBrush x:Key="DynamicTextSecondaryColor" Color="#64748B"/>
        <SolidColorBrush x:Key="DynamicTextMutedColor" Color="#94A3B8"/>
        <SolidColorBrush x:Key="DynamicTextColor" Color="#1E293B"/>

        <!-- 그림자 효과 정의 -->
        <DropShadowEffect x:Key="DropShadowEffect" 
                          Color="#40000000" 
                          BlurRadius="8" 
                          ShadowDepth="2" 
                          Direction="270"/>
        
        <!-- 세컨더리 버튼 스타일 (Optic 페이지와 동일) -->
        <Style x:Key="SecondaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource DynamicSurfaceColor}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource DynamicBorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{DynamicResource DynamicTextPrimaryColor}"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8"
                                Padding="16,12">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{DynamicResource DynamicCardColor}"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#8B5CF6"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{DynamicResource DynamicCardColor}"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#8B5CF6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 모던 스타일 정의 -->
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource DynamicBackgroundColor}"/>
            <Setter Property="BorderBrush" Value="#E1E5E9"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8"
                                Padding="12,8">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{DynamicResource DynamicSurfaceColor}"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#8B5CF6"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{DynamicResource DynamicCardColor}"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#8B5CF6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="AreaHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="ModernTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="{DynamicResource DynamicBackgroundColor}"/>
            <Setter Property="Foreground" Value="{DynamicResource DynamicTextPrimaryColor}"/>
            <Setter Property="BorderBrush" Value="#E1E5E9"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                         Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#8B5CF6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Background="{DynamicResource DynamicBackgroundColor}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 뒤로가기 버튼 (Optic 검사 페이지와 동일) -->
        <Button x:Name="BackButton" 
                Width="60" 
                Height="40" 
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="4,4,0,0"
                Style="{DynamicResource SecondaryButtonStyle}"
                FontSize="20" 
                FontWeight="Bold"
                Click="BackButton_Click">
            <TextBlock Text="←" 
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center"
                       FontSize="20"
                       FontWeight="Bold"/>
        </Button>

        <!-- 상단 헤더 영역 (RGB DATA + Total Parameters) -->
        <Grid Grid.Row="1" Margin="20,5,20,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <!-- 좌측 RGB DATA 헤더 -->
            <Border Grid.Column="0" 
                    Background="#8B5CF6" 
                    CornerRadius="8,8,0,0" 
                    Padding="15,6"
                    Margin="0,0,10,0"
                    BorderBrush="{DynamicResource DynamicBorderColor}"
                    BorderThickness="1,1,1,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0" 
                              Text="🎨 RGB DATA" 
                              FontSize="16"
                              FontWeight="Bold"
                              Foreground="White"
                              VerticalAlignment="Center"/>
                    
                    <Button Grid.Column="1" 
                            x:Name="ResetButton"
                            Content="🔄 Reset" 
                            Background="{DynamicResource DynamicCardColor}"
                            Foreground="{DynamicResource DynamicTextPrimaryColor}"
                            BorderBrush="{DynamicResource DynamicBorderColor}"
                            BorderThickness="1"
                            Padding="12,6"
                            FontSize="12"
                            FontWeight="SemiBold"
                            Click="ResetButton_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        CornerRadius="4">
                                    <ContentPresenter HorizontalAlignment="Center" 
                                                    VerticalAlignment="Center"
                                                    Margin="{TemplateBinding Padding}"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>
            </Border>

            <!-- 우측 Total Parameters 헤더 -->
            <Border Grid.Column="1" 
                    Background="#8B5CF6" 
                    CornerRadius="8,8,0,0" 
                    Padding="15,6"
                    BorderBrush="{DynamicResource DynamicBorderColor}"
                    BorderThickness="1,1,1,0">
                    <TextBlock Text="📊 Total LUT Parameters" 
                               FontSize="16"
                               FontWeight="Bold"
                               Foreground="White"
                               VerticalAlignment="Center"/>
            </Border>
        </Grid>

        <!-- 메인 콘텐츠 영역 -->
        <Grid Grid.Row="2" Margin="20,0,20,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <!-- 좌측 RGB 데이터 영역 -->
            <Border Grid.Column="0" 
                    Background="{DynamicResource DynamicCardColor}" 
                    BorderBrush="{DynamicResource DynamicBorderColor}" 
                    BorderThickness="1,0,1,1" 
                    CornerRadius="0,0,0,8"
                    Margin="0,0,10,0">
                <Grid Margin="10">
                    <!-- RGB 영역을 가로로 3개 배치 -->
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Red 영역 -->
                    <Border Grid.Column="0" 
                            Background="Transparent" 
                            CornerRadius="8" 
                            Margin="0,0,5,0"
                            BorderBrush="#FF6B6B"
                            BorderThickness="2"
                            Effect="{DynamicResource DropShadowEffect}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            
                            <!-- Red 헤더 -->
                            <Border Grid.Row="0" 
                                    Background="{DynamicResource DynamicCardColor}" 
                                    CornerRadius="8,8,0,0"
                                    Padding="10,8"
                                    BorderBrush="#FF6B6B"
                                    BorderThickness="1,1,1,0">
                                <TextBlock Text="Red" 
                                          FontSize="14"
                                          FontWeight="Bold"
                                          Foreground="{DynamicResource DynamicTextPrimaryColor}"
                                          HorizontalAlignment="Center"/>
                            </Border>
                            
                            <!-- Red 콘텐츠 -->
                            <Grid Grid.Row="1" Margin="10">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="4*"/>
                                    <RowDefinition Height="2*"/>
                                    <RowDefinition Height="5*"/>
                                </Grid.RowDefinitions>
                                
                                <!-- 그래프 영역 -->
                                <Border Grid.Row="0" 
                                        Background="{DynamicResource DynamicBackgroundColor}" 
                                        BorderBrush="{DynamicResource DynamicBorderColor}" 
                                        BorderThickness="1" 
                                        CornerRadius="4"
                                        Margin="0,0,0,5">
                                    <Grid>
                                        <Canvas x:Name="RedGraphCanvas" 
                                                Background="Transparent"
                                                HorizontalAlignment="Stretch"
                                                VerticalAlignment="Stretch"
                                                SizeChanged="GraphCanvas_SizeChanged"/>
                                        <TextBlock x:Name="RedGraphPlaceholder"
                                                  Text="RED graph"
                                                  Foreground="{DynamicResource DynamicTextMutedColor}"
                                                  FontWeight="Bold"
                                                  HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"/>
                                    </Grid>
                                </Border>
                                
                                <!-- 공식 영역 -->
                                <Border Grid.Row="1" 
                                        Background="{DynamicResource DynamicBackgroundColor}" 
                                        BorderBrush="{DynamicResource DynamicBorderColor}" 
                                        BorderThickness="1" 
                                        CornerRadius="4"
                                        Margin="0,0,0,5">
                                    <TextBlock x:Name="RedFormulaText"
                                              HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"
                                              Foreground="{DynamicResource DynamicTextPrimaryColor}"/>
                                </Border>
                                
                                <!-- 파라미터 값 영역 -->
                                <Border Grid.Row="2" 
                                        Background="{DynamicResource DynamicBackgroundColor}" 
                                        BorderBrush="{DynamicResource DynamicBorderColor}" 
                                        BorderThickness="1" 
                                        CornerRadius="4">
                                    <TextBlock x:Name="RedParameterText"
                                              HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"
                                              Foreground="{DynamicResource DynamicTextPrimaryColor}"/>
                                </Border>
                            </Grid>
                        </Grid>
                    </Border>

                    <!-- Green 영역 -->
                    <Border Grid.Column="1" 
                            Background="Transparent" 
                            CornerRadius="8" 
                            Margin="2.5,0"
                            BorderBrush="#4ECDC4"
                            BorderThickness="2"
                            Effect="{DynamicResource DropShadowEffect}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            
                            <!-- Green 헤더 -->
                            <Border Grid.Row="0" 
                                    Background="{DynamicResource DynamicCardColor}" 
                                    CornerRadius="8,8,0,0"
                                    Padding="10,8"
                                    BorderBrush="#4ECDC4"
                                    BorderThickness="1,1,1,0">
                                <TextBlock Text="Green" 
                                          FontSize="14"
                                          FontWeight="Bold"
                                          Foreground="{DynamicResource DynamicTextPrimaryColor}"
                                          HorizontalAlignment="Center"/>
                            </Border>
                            
                            <!-- Green 콘텐츠 -->
                            <Grid Grid.Row="1" Margin="10">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="4*"/>
                                    <RowDefinition Height="2*"/>
                                    <RowDefinition Height="5*"/>
                                </Grid.RowDefinitions>
                                
                                <!-- 그래프 영역 -->
                                <Border Grid.Row="0" 
                                        Background="{DynamicResource DynamicBackgroundColor}" 
                                        BorderBrush="{DynamicResource DynamicBorderColor}" 
                                        BorderThickness="1" 
                                        CornerRadius="4"
                                        Margin="0,0,0,5">
                                    <Grid>
                                        <Canvas x:Name="GreenGraphCanvas" 
                                                Background="Transparent"
                                                HorizontalAlignment="Stretch"
                                                VerticalAlignment="Stretch"
                                                SizeChanged="GraphCanvas_SizeChanged"/>
                                        <TextBlock x:Name="GreenGraphPlaceholder"
                                                  Text="GREEN graph"
                                                  Foreground="{DynamicResource DynamicTextMutedColor}"
                                                  FontWeight="Bold"
                                                  HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"/>
                                    </Grid>
                                </Border>
                                
                                <!-- 공식 영역 -->
                                <Border Grid.Row="1" 
                                        Background="{DynamicResource DynamicBackgroundColor}" 
                                        BorderBrush="{DynamicResource DynamicBorderColor}" 
                                        BorderThickness="1" 
                                        CornerRadius="4"
                                        Margin="0,0,0,5">
                                    <TextBlock x:Name="GreenFormulaText"
                                              HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"
                                              Foreground="{DynamicResource DynamicTextPrimaryColor}"/>
                                </Border>
                                
                                <!-- 파라미터 값 영역 -->
                                <Border Grid.Row="2" 
                                        Background="{DynamicResource DynamicBackgroundColor}" 
                                        BorderBrush="{DynamicResource DynamicBorderColor}" 
                                        BorderThickness="1" 
                                        CornerRadius="4">
                                    <TextBlock x:Name="GreenParameterText"
                                              HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"
                                              Foreground="{DynamicResource DynamicTextPrimaryColor}"/>
                                </Border>
                            </Grid>
                        </Grid>
                    </Border>

                    <!-- Blue 영역 -->
                    <Border Grid.Column="2" 
                            Background="Transparent" 
                            CornerRadius="8" 
                            Margin="5,0,0,0"
                            BorderBrush="#45B7D1"
                            BorderThickness="2"
                            Effect="{DynamicResource DropShadowEffect}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            
                            <!-- Blue 헤더 -->
                            <Border Grid.Row="0" 
                                    Background="{DynamicResource DynamicCardColor}" 
                                    CornerRadius="8,8,0,0"
                                    Padding="10,8"
                                    BorderBrush="#45B7D1"
                                    BorderThickness="1,1,1,0">
                                <TextBlock Text="Blue" 
                                          FontSize="14"
                                          FontWeight="Bold"
                                          Foreground="{DynamicResource DynamicTextPrimaryColor}"
                                          HorizontalAlignment="Center"/>
                            </Border>
                            
                            <!-- Blue 콘텐츠 -->
                            <Grid Grid.Row="1" Margin="10">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="4*"/>
                                    <RowDefinition Height="2*"/>
                                    <RowDefinition Height="5*"/>
                                </Grid.RowDefinitions>
                                
                                <!-- 그래프 영역 -->
                                <Border Grid.Row="0" 
                                        Background="{DynamicResource DynamicBackgroundColor}" 
                                        BorderBrush="{DynamicResource DynamicBorderColor}" 
                                        BorderThickness="1" 
                                        CornerRadius="4"
                                        Margin="0,0,0,5">
                                    <Grid>
                                        <Canvas x:Name="BlueGraphCanvas" 
                                                Background="Transparent"
                                                HorizontalAlignment="Stretch"
                                                VerticalAlignment="Stretch"
                                                SizeChanged="GraphCanvas_SizeChanged"/>
                                        <TextBlock x:Name="BlueGraphPlaceholder"
                                                  Text="BLUE graph"
                                                  Foreground="{DynamicResource DynamicTextMutedColor}"
                                                  FontWeight="Bold"
                                                  HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"/>
                                    </Grid>
                                </Border>
                                
                                <!-- 공식 영역 -->
                                <Border Grid.Row="1" 
                                        Background="{DynamicResource DynamicBackgroundColor}" 
                                        BorderBrush="{DynamicResource DynamicBorderColor}" 
                                        BorderThickness="1" 
                                        CornerRadius="4"
                                        Margin="0,0,0,5">
                                    <TextBlock x:Name="BlueFormulaText"
                                              HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"
                                              Foreground="{DynamicResource DynamicTextPrimaryColor}"/>
                                </Border>
                                
                                <!-- 파라미터 값 영역 -->
                                <Border Grid.Row="2" 
                                        Background="{DynamicResource DynamicBackgroundColor}" 
                                        BorderBrush="{DynamicResource DynamicBorderColor}" 
                                        BorderThickness="1" 
                                        CornerRadius="4">
                                    <TextBlock x:Name="BlueParameterText"
                                              HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"
                                              Foreground="{DynamicResource DynamicTextPrimaryColor}"/>
                                </Border>
                            </Grid>
                        </Grid>
                    </Border>
                </Grid>
            </Border>

            <!-- 우측 영역 -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="6*"/>
                    <RowDefinition Height="5*"/>
                </Grid.RowDefinitions>

                <!-- 우측 상단 - Total Parameters -->
                <Border Grid.Row="0" 
                        Background="{DynamicResource DynamicCardColor}" 
                        BorderBrush="{DynamicResource DynamicBorderColor}" 
                        BorderThickness="1,0,1,1" 
                        CornerRadius="0,0,0,0" 
                        Margin="0,0,0,0">
                    <ScrollViewer VerticalScrollBarVisibility="Auto"
                                HorizontalScrollBarVisibility="Auto"
                                Margin="10">
                        <TextBox x:Name="TotalParameterTextBox"
                                Background="Transparent"
                                Foreground="{DynamicResource DynamicTextPrimaryColor}"
                                BorderThickness="0"
                                TextWrapping="Wrap"
                                AcceptsReturn="True"
                                IsReadOnly="True"
                                FontSize="12"/>
                    </ScrollViewer>
                </Border>

                <!-- 우측 하단 - 컨트롤 패널 (Optic Path Setting 스타일) -->
                <Border Grid.Row="1" 
                        Background="{DynamicResource DynamicCardColor}" 
                        BorderBrush="{DynamicResource DynamicBorderColor}" 
                        BorderThickness="1,0,1,1" 
                        CornerRadius="0,0,8,8">
                    <Grid Margin="15">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Start Voltage 섹션 -->
                        <StackPanel Grid.Row="0" Margin="0,0,0,15">
                            <!-- Start Voltage 헤더 -->
                            <Grid Margin="0,0,0,8">
                                <TextBlock Text="Start Voltage" 
                                          FontSize="14"
                                          FontWeight="Bold"
                                          Foreground="{DynamicResource DynamicTextPrimaryColor}"
                                          VerticalAlignment="Center"/>
                                <Rectangle Height="1" 
                                           Fill="#8B5CF6" 
                                           VerticalAlignment="Center" 
                                           Margin="100,0,0,0"/>
                            </Grid>
                            
                            <!-- R_V, G_V, B_V 입력 필드들 (한 행) -->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="50"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="50"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="50"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <!-- R_V -->
                                <Button Grid.Column="0" 
                                        Content="R_V" 
                                        Background="#8B5CF6"
                                        Foreground="White"
                                        BorderThickness="0"
                                        FontSize="10"
                                        FontWeight="Bold"
                                        Height="28"
                                        Margin="0,0,6,0">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="4">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                                <TextBox x:Name="RVTextBox"
                                        Grid.Column="1" 
                                        Background="{DynamicResource DynamicBackgroundColor}"
                                        Foreground="{DynamicResource DynamicTextPrimaryColor}"
                                        BorderBrush="{DynamicResource DynamicBorderColor}"
                                        BorderThickness="1"
                                        Padding="6,4"
                                        FontSize="10"
                                        Margin="0,0,6,0"/>
                                
                                <!-- G_V -->
                                <Button Grid.Column="2" 
                                        Content="G_V" 
                                        Background="#8B5CF6"
                                        Foreground="White"
                                        BorderThickness="0"
                                        FontSize="10"
                                        FontWeight="Bold"
                                        Height="28"
                                        Margin="0,0,6,0">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="4">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                                <TextBox x:Name="GVTextBox"
                                        Grid.Column="3" 
                                        Background="{DynamicResource DynamicBackgroundColor}"
                                        BorderBrush="{DynamicResource DynamicBorderColor}"
                                        BorderThickness="1"
                                        Padding="6,4"
                                        FontSize="10"
                                        Margin="0,0,6,0"/>
                                
                                <!-- B_V -->
                                <Button Grid.Column="4" 
                                        Content="B_V" 
                                        Background="#8B5CF6"
                                        Foreground="White"
                                        BorderThickness="0"
                                        FontSize="10"
                                        FontWeight="Bold"
                                        Height="28"
                                        Margin="0,0,6,0">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="4">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                                <TextBox x:Name="BVTextBox"
                                        Grid.Column="5" 
                                        Background="{DynamicResource DynamicBackgroundColor}"
                                        BorderBrush="{DynamicResource DynamicBorderColor}"
                                        BorderThickness="1"
                                        Padding="6,4"
                                        FontSize="10"/>
                            </Grid>
                        </StackPanel>
                        
                        <!-- Common Settings 섹션 -->
                        <StackPanel Grid.Row="1" Margin="0,0,0,15">
                            <!-- Common Settings 헤더 -->
                            <Grid Margin="0,0,0,8">
                                <TextBlock Text="Common Settings" 
                                          FontSize="14"
                                          FontWeight="Bold"
                                          Foreground="{DynamicResource DynamicTextPrimaryColor}"
                                          VerticalAlignment="Center"/>
                                <Rectangle Height="1" 
                                           Fill="#8B5CF6" 
                                           VerticalAlignment="Center" 
                                           Margin="130,0,0,0"/>
                            </Grid>
                            
                            <!-- Interval, Count 입력 필드들 (한 행) -->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="70"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="70"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <!-- Interval -->
                                <Button Grid.Column="0" 
                                        Content="Interval" 
                                        Background="#8B5CF6"
                                        Foreground="White"
                                        BorderThickness="0"
                                        FontSize="10"
                                        FontWeight="Bold"
                                        Height="28"
                                        Margin="0,0,6,0">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="4">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                                <TextBox x:Name="IntervalTextBox"
                                        Grid.Column="1" 
                                        Background="{DynamicResource DynamicBackgroundColor}"
                                        Foreground="{DynamicResource DynamicTextPrimaryColor}"
                                        BorderBrush="{DynamicResource DynamicBorderColor}"
                                        BorderThickness="1"
                                        Padding="6,4"
                                        FontSize="10"
                                        Margin="0,0,6,0"/>
                                
                                <!-- Count -->
                                <Button Grid.Column="2" 
                                        Content="Count" 
                                        Background="#8B5CF6"
                                        Foreground="White"
                                        BorderThickness="0"
                                        FontSize="10"
                                        FontWeight="Bold"
                                        Height="28"
                                        Margin="0,0,6,0">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="4">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                                <TextBox x:Name="CountTextBox"
                                        Grid.Column="3" 
                                        Background="{DynamicResource DynamicBackgroundColor}"
                                        BorderBrush="{DynamicResource DynamicBorderColor}"
                                        BorderThickness="1"
                                        Padding="6,4"
                                        FontSize="10"/>
                            </Grid>
                        </StackPanel>
                        
                        <!-- Test Start 버튼 -->
                        <Button Grid.Row="2" 
                                x:Name="TestStartButton"
                                FontSize="20"
                                Height="60"
                                VerticalAlignment="Center"
                                Margin="0,4,0,4"
                                Click="TestStartButton_Click">
                            <Button.Content>
                                <TextBlock Text="🚀 Test Start!!" 
                                          Foreground="White" 
                                          FontSize="20"
                                          FontWeight="Bold"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                            </Button.Content>
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="#8B5CF6"
                                            CornerRadius="8"
                                            Effect="{DynamicResource DropShadowEffect}">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                        VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
