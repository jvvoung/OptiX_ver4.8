<UserControl x:Class="OptiX.OpticPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="1200">
    
    <UserControl.Resources>
        <!-- BooleanToVisibilityConverter -->
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        
        <!-- 모던 스타일 정의 -->
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#20B2AA"/>
            <Setter Property="BorderBrush" Value="#20B2AA"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5"
                                Padding="15,8">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#1E9B96"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#1A8A85"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- DataGrid 행 병합을 위한 스타일 -->
        <Style x:Key="MergedCellStyle" TargetType="DataGridCell">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
    </UserControl.Resources>
    
    <Grid>
        <!-- 뒤로가기 버튼 (상단바와 상단영역 사이 중간) -->
        <Button x:Name="BackButton" 
                Content="←" 
                Width="35" 
                Height="31" 
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="5,5,0,0"
                Background="Transparent" 
                BorderThickness="1" 
                BorderBrush="#4285F4"
                Foreground="#4285F4" 
                FontSize="16" 
                FontWeight="Bold"
                Click="BackButton_Click"/>
        
        <!-- 메인 콘텐츠 영역 -->
        <Grid Margin="2,40,2,2">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="250"/>
            </Grid.RowDefinitions>
            
            <!-- 데이터 테이블 (상단) - 플랫폼 가로에 꽉차게 -->
            <Border Grid.Row="0" 
                    Background="White" 
                    BorderBrush="#E1E5E9" 
                    BorderThickness="1" 
                    CornerRadius="5"
                    Margin="0,0,0,10">
                <ScrollViewer x:Name="MainScrollViewer" 
                              HorizontalScrollBarVisibility="Auto" 
                              VerticalScrollBarVisibility="Auto"
                              CanContentScroll="True">
                    <Grid x:Name="DataTableGrid" Background="White">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="1.5*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                    </Grid>
                </ScrollViewer>
            </Border>
            
            <!-- 하단 영역 (Graph/Total + Control Panel) -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                
                <!-- Graph/Total 영역 (하단, 왼쪽) -->
                <Grid Grid.Column="0" Margin="0,0,2,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- 탭 버튼들 (영역 위쪽) -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,5">
                        <Button x:Name="GraphTab" 
                                Content="Graph" 
                                Width="80" 
                                Height="30"
                                Background="#E1E5E9" 
                                Foreground="#666666" 
                                FontSize="12" 
                                FontWeight="Bold"
                                Click="GraphTab_Click"/>
                        <Button x:Name="TotalTab" 
                                Content="Total" 
                                Width="80" 
                                Height="30"
                                Background="#20B2AA" 
                                Foreground="White" 
                                FontSize="12" 
                                FontWeight="Bold"
                                Click="TotalTab_Click"/>
                    </StackPanel>
                    
                    <!-- 콘텐츠 영역 -->
                    <Border Grid.Row="1" 
                            Background="White" 
                            BorderBrush="#E1E5E9" 
                            BorderThickness="1" 
                            CornerRadius="5">
                        <Grid Margin="10">
                            <Grid x:Name="GraphContent" Visibility="Collapsed">
                                <TextBlock Text="Graph 영역" 
                                           HorizontalAlignment="Center" 
                                           VerticalAlignment="Center"
                                           FontSize="16" 
                                           Foreground="#666666"/>
                            </Grid>
                            <Grid x:Name="TotalContent" Visibility="Visible">
                                <TextBlock Text="Total 영역" 
                                           HorizontalAlignment="Center" 
                                           VerticalAlignment="Center"
                                           FontSize="16" 
                                           Foreground="#666666"/>
                            </Grid>
                        </Grid>
                    </Border>
                </Grid>
                
                <!-- 컨트롤 패널 (오른쪽) - 버튼들 가운데 정렬 -->
                <Border Grid.Column="1"
                        Background="White" 
                        BorderBrush="#E1E5E9" 
                        BorderThickness="1" 
                        CornerRadius="5"
                        Margin="2,0,0,0">
                    <Grid Margin="5">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Set Params, Set Path 버튼 -->
                        <Grid Grid.Row="0" Margin="0,0,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Button Grid.Column="0" 
                                    Content="Set Params" 
                                    Style="{StaticResource ModernButtonStyle}"
                                    MinWidth="80" 
                                    Height="35"
                                    FontSize="12"
                                    FontWeight="Bold"
                                    Margin="0,0,5,0"/>
                            <Button Grid.Column="1" 
                                    Content="Set Path" 
                                    Style="{StaticResource ModernButtonStyle}"
                                    MinWidth="80" 
                                    Height="35"
                                    FontSize="12"
                                    FontWeight="Bold"
                                    Margin="5,0,0,0"/>
                        </Grid>
                        
                        <!-- Zone 선택 버튼들 - 동적으로 생성 -->
                        <StackPanel x:Name="ZoneButtonsPanel" 
                                    Grid.Row="1"
                                    Orientation="Horizontal" 
                                    HorizontalAlignment="Center"
                                    Margin="0,0,0,20"/>
                        
                        <!-- Test Start 버튼 -->
                        <Button Grid.Row="2"
                                Content="Test Start!!" 
                                Style="{StaticResource ModernButtonStyle}"
                                MinWidth="170" 
                                Height="45"
                                FontSize="14"
                                FontWeight="Bold"
                                HorizontalAlignment="Stretch"/>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</UserControl>